.container
    %ul
        - @comment.errors.full_messages.each do |message|
            %li= message
    
    = form_with(model: @comment, url: article_comment_articles_path(@comment.article), local: true) do |f|
        %div
            = f.label :content, '内容'
        %div
            = f.text_area :content
        = f.submit '保存', class: 'btn-primary' 
          
